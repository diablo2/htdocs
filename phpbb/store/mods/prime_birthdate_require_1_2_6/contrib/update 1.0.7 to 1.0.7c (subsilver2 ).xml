<mod xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.phpbb.com/mods/xml/modx-1.2.5.xsd">
	<header>
		<license>http://opensource.org/licenses/gpl-license.php GNU General Public License v2</license>
		<title lang="en">Prime Birthdate Require</title>
		<description lang="en">This file provides instructions for updating only those portions of the MOD which deal with the subsilver2 style. See the main install file for any additional information about the MOD.</description>
		<author-notes lang="en">See the main install file for this information.</author-notes>
		<author-group>
			<author>
				<realname>Ken F. Innes IV</realname>
				<email>primehalo@gmail.com</email>
				<username>primehalo</username>
			</author>
		</author-group>
		<mod-version>1.0.7c</mod-version>
		<installation>
			<level>easy</level>
			<time>120</time>
			<target-version>3.0.0</target-version>
		</installation>
	</header>
	<action-group>
		<open src="styles/subsilver2/template/ucp_profile_profile_info.html">
			<edit>
				<find><![CDATA[		<td class="row1" width="35%"><b class="genmed">{L_BIRTHDAY}: </b><br /><span class="gensmall">{L_BIRTHDAY_EXPLAIN}</span></td>]]></find>
				<action type="replace-with"><![CDATA[		<td class="row1" width="35%"><b class="genmed">{L_BIRTHDAY}:<!-- IF S_BIRTHDAYS_REQUIRED --> *<!-- ENDIF --></b><br /><span class="gensmall">{L_BIRTHDAY_EXPLAIN}</span></td>]]></action>
			</edit>
		</open>

		<open src="styles/subsilver2/template/ucp_register.html">
			<edit>
				<find><![CDATA[	<td class="row1"><b class="genmed">{L_PRIME_BIRTHDATE_NAME}:* </b></td>]]></find>
				<action type="replace-with"><![CDATA[	<td class="row1"><b class="genmed">{L_PRIME_BIRTHDATE_NAME}:<!-- IF S_BIRTHDAYS_REQUIRED --> *<!-- ENDIF --></b></td>]]></action>
			</edit>
		</open>
	</action-group>
</mod>
